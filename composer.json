{
  "name": "javareact/fuluopenapi",
  "description": "福禄API,FuLu OpenApi SDK",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "福禄开放平台",
    "FuLu",
    "OpenApi",
    "SDK"
  ],
  "require": {
    "php": ">=7.1",
    "guzzlehttp/guzzle": "*",
    "psr/log": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "JavaReact\\FuluOpenApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\FuluOpenApi\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.4",
    "mockery/mockery": "^1.3",
    "friendsofphp/php-cs-fixer": "^2.16",
    "monolog/monolog": "^2.0"
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix $1",
    "test": "phpunit --colors=always"
  }
}
